[user]
	name = WATANAPEI
	email = info@wpei.dev
	name = WATANAPEI
[core]
	editor = nvim
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[push]
    default = tracking
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
[alias]
    st = status
    sh = show
    so = remote show origin
    ft = fetch
    up = pull --rebase
    rbm = rebase master
    ad = add
    ci = commit -a
    cam = commit -a --amend # modify the latest commit
    co = checkout
    # branch
    br = branch
    ba = branch -a
    bm = branch --merged # display branches already merged
    bn = branch --no-merged # display branches not merged yet
    # log
    wc = whatchanged
    ls = log --stat # include modified files
    lp = log -p # include diff
    la = log --pretty=\"format:%ad %h(%an): %s\" --date=short # display general information
    lr = log origin
    oneline = log --pretty=oneline
    ranking = shortlog -s -n --no-merges
    log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
    log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
    # diff
    dm = diff master
    dw = diff --color-words
    dc = diff --cached # diff to staged
    ds = diff --staged # same above
    d1 = diff HEAD~
    dr = diff master origin/master
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""

[credential]
	helper = "!f() { /home/app/.vscode-server/bin/ea3859d4ba2f3e577a159bc91e3074c5d85c0523/node /tmp/vscode-remote-containers-0c926ac3d5196c31a9c332e0b9ba5dda966b870d.js $*; }; f"
